<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_no_tabs" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/medium_padding"
            tools:context=".ui.fragments.LightFragment">

            <TextView
                android:id="@+id/light_white_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="WeiÃŸes Licht"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <SeekBar
                android:id="@+id/light_white_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/light_white_label"
                android:layout_toEndOf="@+id/light_white_label"
                android:max="100"
                android:paddingTop="2dp" />

            <View
                android:id="@+id/spacer"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/light_white_label" />

            <TextView
                android:id="@+id/light_rgb_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/light_white_label"
                android:layout_below="@+id/spacer"
                android:paddingBottom="@dimen/medium_padding"
                android:text="Farbiges Licht"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/light_color_mode_spinner"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/light_white_label"
                android:layout_below="@+id/light_rgb_label"
                android:paddingBottom="@dimen/medium_padding"
                android:spinnerMode="dropdown" />

            <RelativeLayout
                android:id="@+id/light_color_manually_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/light_color_mode_spinner">

                <include layout="@layout/box_light_rgb" />

                <include layout="@layout/box_light_color_picker" />
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</LinearLayout>